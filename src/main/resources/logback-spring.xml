<configuration>
  <!-- Hibernateのログレベルを警告のみ表示（INFOやDEBUGを非表示） -->
  <logger name="org.hibernate" level="WARN"/>

  <!-- Flyway（DBマイグレーション）のログを警告レベルに設定 -->
  <logger name="org.flywaydb.core" level="WARN"/>

  <!-- HikariCP（DBコネクションプール）のログを警告レベルに設定 -->
  <logger name="com.zaxxer.hikari" level="WARN"/>

  <!-- Tomcat（組み込みサーバー）のログを警告レベルに設定 -->
  <logger name="org.apache.catalina" level="WARN"/>

  <!-- HibernateのSQL出力を無効化 -->
  <logger name="org.hibernate.SQL" level="OFF"/>

  <!-- Hibernateのバインドパラメータ出力を無効化 -->
  <logger name="org.hibernate.orm.jdbc.bind" level="OFF"/>

  <!-- 全体のログ出力レベルをWARNに設定 -->
  <root level="WARN">
    <appender-ref ref="CONSOLE"/>
  </root>
</configuration>
